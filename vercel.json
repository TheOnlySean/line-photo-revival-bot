{
  "functions": {
    "api/webhook.js": {
      "maxDuration": 60
    },
    "api/cron/check-tasks.js": {
      "maxDuration": 60
    },
    "api/payment/create-checkout-session.js": {
      "maxDuration": 30
    },
    "api/payment/webhook.js": {
      "maxDuration": 30
    },
    "api/payment/session-details.js": {
      "maxDuration": 30
    },
    "api/payment/create-direct-checkout.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-tasks",
      "schedule": "*/2 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/demo-files/(.*)",
      "destination": "/demo-files/$1"
    },
    {
      "source": "/payment.html",
      "destination": "/public/payment.html"
    },
    {
      "source": "/payment/(.*)",
      "destination": "/public/payment/$1"
    },
    {
      "source": "/plan-trial-card.svg",
      "destination": "/public/plan-trial-card.svg"
    },
    {
      "source": "/plan-standard-card.svg",
      "destination": "/public/plan-standard-card.svg"
    },
    {
      "source": "/logo-placeholder.svg",
      "destination": "/public/logo-placeholder.svg"
    }
  ]
} 